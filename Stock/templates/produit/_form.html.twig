{{ form_start(form) }}

<div class="row">
    <div class="col-6">
        {{ form_row(form.nom) }}
    </div>
    <div class="col-6">
        {{ form_row(form.categorie) }}
    </div>
</div>

<div class="row">
    <div class="col-6">
        {{ form_row(form.quantite) }}
    </div>
    <div class="col-6">
        {{ form_row(form.reference) }}
    </div>
</div>

{{ form_row(form.description) }}

<button class="btn btn-primary"><i
            class="far fa-save"></i> {{ button_label|default('Save')|trans }}</button>
{{ form_end(form) }}