{% extends '@AcMarcheStock/layout.html.twig' %}

{% block body %}

    <div class="card">
        <h3 class="card-header">{{ produit.nom }}</h3>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary"><i
                        class="far fa-save"></i> {{ button_label|default('Save')|trans }}</button>
            {{ form_end(form) }}

            <br/>
            <a href="{{ path('stock_produit_show',{'id': produit.id}) }}"><i class="fas fa-arrow-left"></i>
                Annuler</a>
        </div>
    </div>

    {{ include('@AcMarcheStock/produit/_delete_form.html.twig') }}
{% endblock %}
