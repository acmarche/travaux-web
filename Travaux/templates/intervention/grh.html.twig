{% extends '@AcMarcheTravaux/layout.html.twig' %}
{% block body %}

<div class="card">
    <h3 class="card-header">Liste des interventions ({{ interventions | length }}) en {{ year }}</h3>
    <div class="card-body">

            <ul class="list-group list-group-horizontal my-3">
                <li class="list-group-item">
                    <a href="{{ path('grh_export', {'year':2020 }) }}">
                        2020
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="{{ path('grh_export', {'year':2021 }) }}">
                        2021
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="{{ path('grh_export', {'year':2022 }) }}">
                        2022
                    </a>
                </li>
            </ul>

            <a href="{{ path('grh_export', {'year':year, 'xls':true }) }}"
               class="btn btn-primary my-3">
                Exporter en Xls
            </a>

        <table class='table table-bordered table-hover'>
            <thead>
            <tr>
                <th scope="col">Numéro</th>
                <th scope="col">Date</th>
                <th scope="col">Intitule</th>
                <th scope="col">Affection</th>
                <th scope="col">Type</th>
                <th scope="col">Bâtiment</th>
                <th scope="col">Description</th>
            </tr>
            </thead>
            <tbody>
            {% for intervention in interventions %}
                <tr id="{{ intervention.id }}">
                    <td>
                        {{ intervention.id }}
                    </td>
                    <td>
                        {{ intervention.createdAt| date('d-m-Y') }}
                    </td>
                    <td>
                        {{ intervention.intitule }}
                    </td>
                    <td>
                        {{ intervention.affectation }}
                    </td>
                    <td>
                        {{ intervention.domaine }}
                    </td>
                    <td>
                        {{ intervention.batiment }}
                    </td>
                    <td>
                        {{ intervention.descriptif|nl2br }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}