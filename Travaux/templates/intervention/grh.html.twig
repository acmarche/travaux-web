{% extends '@AcMarcheTravaux/layout.html.twig' %}
{% block body %}

<div class="card">
    <h3 class="card-header">Liste des interventions ({{ interventions | length }})</h3>
    <div class="card-body">
        <table class='table table-bordered table-hover'>
            <thead>
            <tr>
                <th scope="col">Num√©ro</th>
                <th scope="col">Date</th>
                <th scope="col">Intitule</th>
                <th scope="col" class="hidden-xs">Affection</th>
            </tr>
            </thead>
            <tbody>
            {% for intervention in interventions %}
                <tr id="{{ intervention.id }}">
                    <td>
                        {{ intervention.id }}
                    </td>
                    <td>
                        {{ intervention.createdAt| date('d-m-Y') }}
                    </td>
                    <td>
                        {{ intervention.intitule }}
                    </td>
                    <td>
                        {{ intervention.descriptif|nl2br }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}