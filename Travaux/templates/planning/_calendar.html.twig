<div class="mb-3" id="dropdownCalendar">
    <div class="d-grid gap-1">
        <div class="cal">
            <div class="cal-month shadow-md p-3 mb-2 bg-body-tertiary rounded bg-primary-subtle text-white"
                 style="background-color: antiquewhite">
                {% include '@Travaux/planning/_calendar_navigate.html.twig' %}
            </div>
            <div class="cal-weekdays text-muted">
                <div class="cal-weekday">Semaine</div>
                {% for weekday in weekdays %}
                    <div class="cal-weekday">{{ weekday|trans[:3] }}</div>
                {% endfor %}
            </div>
            <div class="cal-days">
                {% set class = "border border-success" %}
                {% for week in weeks %}
                    <a class="btn btn-sm btn-success align-self-center"
                       href="{{ path('planning_export_pdf_weekly',{'year':dateSelected.year,'week':week.startDate.weekOfYear, 'categoryPlanning':categorySelected ?categorySelected.id}) }}"
                       title="Exporter la semaine en pdf "
                       role="button">
                        <i class="fas fa-file-pdf"></i>
                        S{{ week.startDate.weekOfYear }}
                    </a>
                    {% for day in week %}
                        {% include '@Travaux/planning/_cell.html.twig' %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
