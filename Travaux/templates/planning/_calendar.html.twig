<div class="dropdown-menu-cal p-2 shadow rounded-3 mb-3" id="dropdownCalendar">
    <div class="d-grid gap-1">
        <div class="cal">
            <div class="cal-month">
                {% include '@Travaux/planning/_calendar_navigate.html.twig' %}
            </div>
            <div class="cal-weekdays text-muted">
                <div class="cal-weekday">{{ 'week.name'|trans[:1] }}</div>
                {% for weekday in weekdays %}
                    <div class="cal-weekday">{{ weekday|trans[:3] }}</div>
                {% endfor %}
            </div>
            <div class="cal-days">
                {% set class = "border border-success" %}
                {% for week in weeks %}
                    {% if week.startDate.weekOfYear == dateSelected.weekOfYear %}

                    {% else %}

                    {% endif %}
                    <a class="btn cal-btn {{ class }} align-self-end" disabled="" href="#"
                       role="button">
                        S{{ week.startDate.weekOfYear }}
                    </a>
                    {% for day in week %}
                        {% include '@Travaux/planning/_cell.html.twig' %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
