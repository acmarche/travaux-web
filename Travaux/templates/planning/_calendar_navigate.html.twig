<a class="cal-month-name" href="#">
    <strong>{{ dateSelected.monthName|capitalize }} {{ dateSelected.year }}
        <i>{{ categorySelected ? categorySelected.name }}</i></strong>
</a>

<a href="{{ path('planning_index', {'yearmonth':previous.format('Y-m'), 'categoryPlanning':categorySelected ? categorySelected.id}) }}"
   title="Mois précédent"
   class="cal-month-previous btn-sm btn btn-outline-primary" role="button">
    <i class="fas fa-arrow-left"></i>
</a>
<a href="{{ path('planning_index', {'yearmonth':next.format('Y-m'), 'categoryPlanning':categorySelected ? categorySelected.id}) }}"
   title="Mois suivant"
   class="cal-month-next btn btn-sm btn-outline-primary" role="button">
    <i class="fas fa-arrow-right"></i>
</a>
<a class="cal-month-today btn btn-sm btn-outline-primary" role="button"
   href="#">
    <span class="font-weight-bolder">Aujourd'hui</span>
</a>
