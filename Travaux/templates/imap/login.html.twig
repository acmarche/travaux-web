{% extends '@AcMarcheTravaux/layout.html.twig' %}

{% block body -%}

    <div class="card">
        <div class="card-header">
            <h3>Connection à ma boite mail {{ user.email }}</h3>
        </div>
        <div class="card-body">

            <div class="alert alert-info">
                Connectez vous à votre adresse mail pour ajouter des interventions
            </div>

            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            <button class="btn btn-primary mr-1 mb-2" type="submit">
                <i class="ti ti-device-floppy"
                   aria-hidden="true"></i>
                Me connecter
            </button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}